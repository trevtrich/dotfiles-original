[alias]
	br = branch
	cm = commit

	# Delete Merged
	dm = "!git branch -r --merged master | grep -v '\\master' | xargs -n 1 git branch -d"

	# Clean Slate
  cs = "!git co master && git pull --rebase --prune && git dm && git dmr && git remote prune origin && git submodule update --init --recursive"
	co = checkout
	hist = log -n 10 --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	histl = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
	pom = pull origin master
	rom = !git fetch origin && git rebase origin/master
	st = status
	wipe = !git add -A && git commit -qnm 'WIPE SAVEPOINT' && git reset HEAD~1 --hard
	amend = commit -a --amend --no-edit
  fp = push --force-with-lease

[color]
	branch = auto
	diff = auto
	status = auto
	ui = auto

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = red
	untracked = magenta

[core]
  autocrlf = input
  longpaths = true
  whitespace=fix,tab-in-indent,trailing-space,cr-at-eol
	excludesfile = ~/.gitignore

